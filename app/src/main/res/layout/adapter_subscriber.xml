<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ltSubscriber"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_7sdp"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/subscriberContainer"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_85sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:background="@drawable/bg_white_rounded_corners"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subscriberName"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/color_white"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/subscriberContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subscriberContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMuteSubscriber"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="?selectableItemBackgroundBorderless"
        android:elevation="@dimen/_8sdp"
        android:src="@drawable/ic_mike_off_subscriber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscriberName" />
</androidx.constraintlayout.widget.ConstraintLayout>